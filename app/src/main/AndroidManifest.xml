<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="im.abe.megaphone.app">

    <uses-permission android:name="android.permission.NFC"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"/>
        <activity
                android:name=".MessageActivity"
                android:label="@string/title_activity_message"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="im.abe.megaphone.app.MainActivity"/>
        </activity>
        <activity
                android:name=".MessageEditActivity"
                android:label="@string/title_activity_message_edit"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="im.abe.megaphone.app.MainActivity"/>
        </activity>
        <activity
                android:name=".LoginRegisterActivity"
                android:label="@string/title_activity_login_register"
                android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/action_settings"/>
        <activity android:name=".Intro"
                  android:label="@string/intro"/>
    </application>

</manifest>
